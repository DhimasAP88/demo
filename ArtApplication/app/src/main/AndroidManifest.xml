<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.art.dhimas.artapplication">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new"
        android:supportsRtl="true"
        android:theme="@style/FullScreenTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".modul.login.LoginPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modul.home.HomePageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modul.register.RegisterPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modul.profile.ProfilePageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modul.detail.DetailPageActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>