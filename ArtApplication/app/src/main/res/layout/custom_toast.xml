<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/layout_rounded_blue_border"
    android:padding="@dimen/d10">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="@dimen/d25"
        android:layout_height="@dimen/d25"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d10"
        android:src="@drawable/ic_error_login" />

    <TextView
        android:id="@+id/textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageview_icon"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/d5"
        android:paddingTop="@dimen/d5"
        android:textColor="@color/charcoal"
        android:textSize="@dimen/s15" />

</RelativeLayout>
