<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d30"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/s25"
            android:text="REGISTER"
            android:gravity="center"
            android:layout_marginTop="@dimen/d20"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/d30"
            android:padding="@dimen/d5"
            android:background="@drawable/border_input"
            android:layout_marginTop="@dimen/d50"
            android:hint="Username"
            android:inputType="text"
            android:id="@+id/input_username"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/d30"
            android:padding="@dimen/d5"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/border_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/input_password"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d20"
                android:id="@+id/checkbox_register"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree with Terms and Condition"
                android:layout_marginLeft="@dimen/d10"/>
        </LinearLayout>

        <Button
            android:layout_width="@dimen/d150"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="@dimen/d10"
            android:text="REGISTER"
            android:id="@+id/register_btn"/>

    </LinearLayout>
</LinearLayout>