<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_profile"
            android:layout_width="@dimen/d110"
            android:layout_height="@dimen/d110"
            android:layout_marginTop="@dimen/d40"
            android:src="@drawable/home"
            app:civ_border_color="@color/silver_light"
            app:civ_shadow_color="@color/clear"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="JHONDOE"
            android:id="@+id/username_profile"
            android:textSize="@dimen/s20"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/d20"
            />

        <Button
            android:layout_width="@dimen/d100"
            android:layout_height="@dimen/d40"
            android:text="Logout"
            android:id="@+id/logout_btn"
            android:layout_marginTop="@dimen/d50"/>
    </LinearLayout>
</LinearLayout>